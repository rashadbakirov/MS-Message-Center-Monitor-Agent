# Microsoft Message Center Monitor - Example .env
# Use this as a reference for GitHub Secrets.
# Do not commit your real .env file.

# Microsoft Graph / App Registration
# Tenant ID = Directory (tenant) ID
# App ID = Application (client) ID
AZURE_TENANT_ID=your-tenant-id
MC_APP_ID=your-app-id
MC_CLIENT_SECRET=your-client-secret

# Microsoft Foundry (Azure OpenAI)
# Endpoint must end with a trailing slash.
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-10-01-preview

# Teams delivery via Workflows in Teams (Power Automate) HTTP trigger
TEAMS_WEBHOOK_URL=https://default_<ENV_ID>.cd.environment.api.powerplatform.com:443/powerautomate/automations/direct/workflows/<WORKFLOW_ID>/triggers/manual/paths/invoke?api-version=1&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=<SIGNATURE>

# Optional behavior
DAILY_BRIEF_LOOKBACK_HOURS=24
NOTIFY_ON_EMPTY=true

# Optional Service Health display settings
SERVICE_HEALTH_PORTAL_URL=https://admin.microsoft.com/Adminportal/Home#/servicehealth
# Optional animated or static image for critical alerts (leave empty to disable)
CRITICAL_ALERT_IMAGE_URL=
